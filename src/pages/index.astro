---
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import Projects from '../components/Projects.astro';
import Tools from '../components/Tools.astro'
import Alquivago from '../components/Alquivago.astro';
import Resume from '../components/Resume.astro';
import Sakuga from '../components/Sakuga.astro';
const frontTools = ["next-js.svg", "react.svg", "Tailwind.svg", "js.svg"]
const backTools = ["node.svg", "docker.svg", "mongo.svg", "flask.svg"]
---

<Layout title="Welcome to Astro.">
	<main class="grid grid-cols-1 md:grid-cols-4 h-max md:w-5/6 w-11/12 mx-auto grid-rows-9 gap-5">
		<Header></Header>
		<Projects></Projects>
				<!-- Estos dos componentes pueden ser modularizados -->
				<Tools tools={frontTools} direction={["+60%", "-60%"]}/>
				<Tools tools={backTools} direction={["-60%", "+60%"]}/>
	<Resume/>
		<article class="md:col-start-4 md:row-start-5 bg-vgreen-500 md:row-span-2 rounded-lg shadow-lg shadow-vgreen-500 text-center">Learning</article>
		<Alquivago/>
		<Sakuga/>
		<footer class="md:col-span-4 rounded-lg shadow-lg bg-vgreen-700 text-center text-bold h-32">Footer</footer>
	</main>
</Layout>
